<Window x:Class="viWPFOpencv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:viWPFOpencv"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="2000">
    <Grid Margin="10">
        <!-- 열 정의: 왼쪽(2*), 오른쪽(1*) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- 왼쪽: 이미지 영역 -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 이미지 선택 버튼 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="이미지 1 선택" Click="BtnSelectOneImage_Click" Margin="10,0,0,0" Width="100" Height="30"/>
                <Button Content="이미지 2 선택" Click="BtnSelectTwoImage_Click" Margin="10,0,0,0" Width="100" Height="30"/>
            </StackPanel>

            <!-- 원본 / 결과 이미지 출력 -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <Image x:Name="ImgOriginal" Width="500" Height="300" Stretch="Uniform" Margin="0,0,0,10"/>
                    <Image x:Name="ImgSecondOri" Width="500" Height="300" Stretch="Uniform" Margin="0,20,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <Image x:Name="ImgResult" Width="450" Height="250" Stretch="Uniform" Margin="0,0,0,10"/>
                    <Image x:Name="ImgRstGray" Width="450" Height="250" Stretch="Uniform" Margin="0,20,0,0"/>
                    <Image x:Name="ImgHistogram" Width="450" Height="250" Stretch="Uniform" Margin="0,20,0,0"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- 오른쪽: 옵션 영역 -->
        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10">
            <!-- Threshold 슬라이더 -->
            <Expander Header="Threshold 옵션" IsExpanded="False">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Threshold:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Slider x:Name="SliderThreshold" Minimum="0" Maximum="255" Value="128"
                            Width="200" ValueChanged="SliderThreshold_ValueChanged"/>
                    <TextBlock x:Name="TxtValue" Text="128" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <Button x:Name ="btnOtsu" Margin="10,0,0,0" Click="btnOtsu_Click">otsu Algorithm</Button>
                </StackPanel>
            </Expander>

            <!-- 라디오 버튼 -->
            <Expander Header="Threshold 모드" IsExpanded="False">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <RadioButton Content="THRESH_BINARY" GroupName="Options" Margin="5" Click="RadioButton_Click" IsChecked="True"/>
                    <RadioButton Content="THRESH_BINARY_INV" GroupName="Options" Margin="5" Click="RadioButton_Click"/>
                    <RadioButton Content="THRESH_TRUNC" GroupName="Options" Margin="5" Click="RadioButton_Click"/>
                    <RadioButton Content="THRESH_TOZERO" GroupName="Options" Margin="5" Click="RadioButton_Click"/>
                    <RadioButton Content="THRESH_TOZERO_INV" GroupName="Options" Margin="5" Click="RadioButton_Click"/>
                </StackPanel>
            </Expander>

            <!-- Adaptive 옵션 -->
            <Expander Header="Adaptive 옵션" IsExpanded="False">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <RadioButton Content="ADAPTIVE_THRESH_MEAN_C" GroupName="OptionAdative" Margin="5" Click="RadioButton_Adative_Click" IsChecked="True"/>
                    <RadioButton Content="ADAPTIVE_THRESH_GAUSSIAN_C" GroupName="OptionAdative" Margin="5" Click="RadioButton_Adative_Click"/>
                    <Label Content="blockSize :" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <TextBox x:Name="txtBlockSize" Text="3" Width="30" Margin="5"/>
                    <Label Content="C :" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <TextBox x:Name="txtCValue" Text="1" Width="30" Margin="5"/>
                    <Button x:Name = "btnAdative" Margin="10,0,0,0" Click="btnAdative_Click">Adaptive</Button>
                </StackPanel>
            </Expander>

            <!-- Blending 옵션 -->
            <Expander Header="Blending 옵션" IsExpanded="False">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="alpha / Beta :" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Slider x:Name="SliderAlphaBeta" Minimum="0" Maximum="1" Value="0.5" TickFrequency="0.1" IsSnapToTickEnabled="True"
                            TickPlacement="BottomRight" Width="200" ValueChanged="SliderAlphaBeta_ValueChanged"/>
                    <Label Content="alpha :" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtAlpha" Text="0.5" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <Label Content="| beta :" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtBeta" Text="0.5" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    <Label Content="| gamma :" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtGamma" Text="0.0" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <CheckBox x:Name ="chkApply" Margin="10,0,0,0">blend Apply</CheckBox>
                </StackPanel>
            </Expander>

            <!-- Bitwise 옵션 -->
            <Expander Header="Bitwise 옵션" IsExpanded="False">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <RadioButton Content="bitwiseOR" GroupName="bitwise" Margin="5" Click="RadioButton_Bitwise_Click" IsChecked="True"/>
                    <RadioButton Content="bitwiseAND" GroupName="bitwise" Margin="5" Click="RadioButton_Bitwise_Click"/>
                    <RadioButton Content="bitwiseXOR" GroupName="bitwise" Margin="5" Click="RadioButton_Bitwise_Click"/>
                    <RadioButton Content="bitwiseNOT" GroupName="bitwise" Margin="5" Click="RadioButton_Bitwise_Click"/>
                    <RadioButton Content="absDiff" GroupName="bitwise" Margin="5" Click="RadioButton_Bitwise_Click"/>
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>

</Window>
