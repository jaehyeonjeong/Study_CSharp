<Window x:Class="viWPFOpencv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:viWPFOpencv"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 이미지 선택 버튼 -->
        <Button Content="이미지 선택" Click="BtnSelectImage_Click" Width="100" Height="30"/>

        <!-- 원본 / 결과 이미지 출력 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Image x:Name="ImgOriginal" Width="350" Height="400" Stretch="Uniform"/>
            <Image x:Name="ImgThreshold" Width="350" Height="400" Stretch="Uniform" Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Threshold 슬라이더 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Threshold:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Slider x:Name="SliderThreshold" Minimum="0" Maximum="255" Value="128"
                    Width="300" ValueChanged="SliderThreshold_ValueChanged"/>
            <TextBlock x:Name="TxtValue" Text="128" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <Button x:Name ="btnOtsu" Margin="10,0,0,0" Click="btnOtsu_Click"> otsu Algorithm </Button>
        </StackPanel>
        
        <!-- 라디오 버튼 5개 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <RadioButton Content="THRESH_BINARY" GroupName="Options" Margin="5" Click="RadioButton_Click" IsChecked="True"/>
            <RadioButton Content="THRESH_BINARY_INV" GroupName="Options" Margin="5" Click="RadioButton_Click"/>
            <RadioButton Content="THRESH_TRUNC" GroupName="Options" Margin="5" Click="RadioButton_Click"/>
            <RadioButton Content="THRESH_TOZERO" GroupName="Options" Margin="5" Click="RadioButton_Click"/>
            <RadioButton Content="THRESH_TOZERO_INV" GroupName="Options" Margin="5" Click="RadioButton_Click"/>
        </StackPanel>

    </Grid>

</Window>
