<Page
    x:Class="UiDesktopApp1.Views.Pages.DataPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UiDesktopApp1.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:UiDesktopApp1.Controls"
    xmlns:models="clr-namespace:UiDesktopApp1.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DataPage"
    d:DataContext="{d:DesignInstance local:DataPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="800"
    d:DesignWidth="850"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <controls:LoadingControl Grid.Column="0" HorizontalAlignment="Center" 
                                 x:Name="searchGridLoadingControl" Visibility="Visible"/>

        <Grid Grid.Column="0" x:Name="searchGrid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Vertical">
                <ui:TextBlock x:Name="tblkAdminAgency" Margin="0,0,0,10">
                    <Run Text="Administrative Agency "/>
                    <Run Text="*" Foreground="OrangeRed"/>
                </ui:TextBlock>
                <ComboBox x:Name="cbxAdminAgency" Text="{Binding ViewModel.SelectedAdministrativeAgency, Mode=TwoWay}"
                          ItemsSource="{Binding ViewModel.AdministrativeAgency, Mode=TwoWay}" Margin="0,0,0,10"
                          IsEditable="True" SelectionChanged="cbxAdminAgency_SelectionChanged" />

                <ui:TextBlock x:Name="tblkTotalPopulation" Margin="0,0,0,10">
                    <Run Text="Total Population "/>
                    <Run Text="*" Foreground="OrangeRed"/>
                </ui:TextBlock>
                <ui:NumberBox x:Name="tbxTotPopulation" Margin="0,0,0,10"
                            Text="{Binding ViewModel.SelectedTotalPopulation, Mode=TwoWay}"></ui:NumberBox>

                <ui:TextBlock x:Name="tblkMalePopulation" Margin="0,0,0,10">
                    <Run Text="Male Population "/>
                    <Run Text="*" Foreground="OrangeRed"/>
                </ui:TextBlock>
                <ui:NumberBox x:Name="tbxMalePopulation" Margin="0,0,0,10"
                            Text="{Binding ViewModel.SelectedMalePopulation, Mode=TwoWay}"></ui:NumberBox>

                <ui:TextBlock x:Name="tblkFeMalePopulation" Margin="0,0,0,10">
                    <Run Text="FeMale Population "/>
                    <Run Text="*" Foreground="OrangeRed"/>
                </ui:TextBlock>
                <ui:NumberBox x:Name="tbxFeMalePopulation" Margin="0,0,0,10"
                            Text="{Binding ViewModel.SelectedFeMalePopulation, Mode=TwoWay}"></ui:NumberBox>

                <ui:TextBlock x:Name="tblkSexRatio" Margin="0,0,0,10">
                    <Run Text="Sex Ratio "/>
                    <Run Text="*" Foreground="OrangeRed"/>
                </ui:TextBlock>
                <ui:NumberBox x:Name="tbxSexRatio" Margin="0,0,0,10"
                            Text="{Binding ViewModel.SelectedSexRatio, Mode=TwoWay}"></ui:NumberBox>

                <ui:TextBlock x:Name="tblkNumOfHouseolds" Margin="0,0,0,10">
                    <Run Text="Number Of Households "/>
                    <Run Text="*" Foreground="OrangeRed"/>
                </ui:TextBlock>
                <ui:NumberBox x:Name="tbxNumOfHouseolds" Margin="0,0,0,10"
                            Text="{Binding ViewModel.SelectedNumberOfHouseholds, Mode=TwoWay}"></ui:NumberBox>

                <ui:TextBlock x:Name="tblkNumOfPPHouseolds" Margin="0,0,0,10">
                    <Run Text="Number Of People Per Households "/>
                    <Run Text="*" Foreground="OrangeRed"/>
                </ui:TextBlock>
                <ui:NumberBox x:Name="tbxNumOfPPHouseolds" Margin="0,0,0,10"
                            Text="{Binding ViewModel.SelectedNumberOfPeoplePerHouseholds, Mode=TwoWay}"></ui:NumberBox>

                <ui:Button Height="50" Width="300" Background="SteelBlue" 
                           Command="{Binding ViewModel.CreateNewDataCommand, Mode=OneWay}"
                           Content="Create" Foreground="White" Margin="0, 0, 0, 10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <ui:Button Grid.Column="0" Width="150" Height="50" Margin="0, 0, 0, 10"
                            Content="Read All" Foreground="White" Background="YellowGreen"
                            HorizontalAlignment="Center" Command="{Binding ViewModel.ReadAllDataCommand}"></ui:Button>
                        <ui:Button Grid.Column="1" Width="150" Height="50" Margin="0, 0, 0, 10"
                            Content="Read" Foreground="White" Background="YellowGreen"
                            HorizontalAlignment="Center"></ui:Button>
                    </StackPanel>
                </Grid>

                <ui:Button Height="50" Width="300" Background="Bisque"
                    Content="Update" Foreground="Black" Margin="0, 0, 0, 10"/>

                <ui:Button Height="50" Width="300" Background="IndianRed"
                    Content="Delete" Foreground="White" Margin="0, 0, 0, 10"/>
            </StackPanel>
        </Grid>

        <controls:LoadingControl Grid.Column="1" HorizontalAlignment="Center" 
                         x:Name="dgGridLoadingControl" Visibility="Visible"/>

        <Grid Grid.Column="1" x:Name="dgGrid" Visibility="Collapsed">
            <DataGrid x:Name="dgGangnamguPopulation" ItemsSource="{Binding ViewModel.GangnamguPopulations, Mode=OneWay}"/>
        </Grid>
    </Grid>
</Page>
