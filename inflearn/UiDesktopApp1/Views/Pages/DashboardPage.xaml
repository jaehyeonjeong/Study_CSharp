<Page
    x:Class="UiDesktopApp1.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UiDesktopApp1.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ui:Button
            Grid.Column="0"
            x:Name="btnClickMe"
            Command="{Binding ViewModel.CounterIncrementCommand, Mode=OneWay}"
            Content="Click me!"
            Icon="Fluent24" />
        <ui:Button
            Grid.Column ="1"
            Command="{Binding ViewModel.TextChangedCommand, Mode=OneWay}"
            Content="Click me 2!"
            Icon="Fluent24" Margin="240,0,0,0" />
        <TextBlock
            Grid.Column="1"
            Margin="12,0,118,0"
            VerticalAlignment="Center"
            Text="{Binding ViewModel.Text01, Mode=OneWay}" />
        <TextBlock
            Grid.Column="4"
            Margin="369,0,-239,0"
            VerticalAlignment="Center"
            Text="{Binding ViewModel.Text02, Mode=OneWay}" />
    </Grid>
</Page>
